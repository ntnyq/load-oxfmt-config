{
  "name": "load-oxfmt-config",
  "type": "module",
  "version": "0.0.5",
  "packageManager": "pnpm@10.28.0",
  "description": "Load .oxfmtrc.json(c) for oxfmt.",
  "keywords": [
    "jsonc-parser",
    "load-config",
    "load-oxfmt-config",
    "load-oxfmtrc",
    "oxfmt",
    "oxfmtrc"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/load-oxfmt-config#readme",
  "repository": "ntnyq/load-oxfmt-config",
  "bugs": {
    "url": "https://github.com/ntnyq/load-oxfmt-config/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "oxfmt": "^0.24.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@ntnyq/tsconfig": "^3.1.0",
    "@types/node": "^25.0.6",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.24.0",
    "prettier": "^3.7.4",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,vue,yml,yaml,toml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
