{
  "name": "load-oxfmt-config",
  "type": "module",
  "version": "0.0.8",
  "packageManager": "pnpm@10.28.2",
  "description": "Load .oxfmtrc.json(c) for oxfmt.",
  "keywords": [
    "jsonc-parser",
    "load-config",
    "load-oxfmt-config",
    "load-oxfmtrc",
    "oxfmt",
    "oxfmtrc"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/load-oxfmt-config#readme",
  "repository": "ntnyq/load-oxfmt-config",
  "bugs": {
    "url": "https://github.com/ntnyq/load-oxfmt-config/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s format:check lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "oxfmt": "0.x"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^6.0.0-beta.6",
    "@ntnyq/tsconfig": "^3.1.0",
    "@types/node": "^25.2.0",
    "@typescript/native-preview": "^7.0.0-dev.20260202.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.28.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,vue,yml,yaml,toml,json}": "eslint --fix",
    "*": "oxfmt --no-error-on-unmatched-pattern"
  }
}
